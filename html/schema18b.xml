<?xml version="1.0" encoding="UTF-8" ?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
   <xs:element name="Paises">
    <xs:complexType>
        <xs:sequence>
            <xs:element name="pais" minOccurs="0" maxOccurs="unbounded">
                 <xs:complexType>
                     <xs:sequence>
                         <xs:element name="superficie" type="xs:integer">
                             <xs:complexType>
                                <xs:attribute name="unidades" type="xs:string" use="required" >
                                    <xs:simpleType>
                                        
                                    </xs:simpleType>
                                </xs:attribute>
                             </xs:complexType>
                         </xs:element>
                         <xs:element name="moneda" maxOccurs="unbounded"></xs:element>
                         <xs:element name="gobierno"></xs:element>
                     </xs:sequence>
                     <xs:attribute name="nombre" type="xs:ID" use="required"></xs:attribute>
                     <xs:attribute name="fronteras" type="xs:IDREFS" use="required"></xs:attribute>
                 </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>




    <?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE paises [
<!ELEMENT paises (pais*)>
<!ELEMENT pais (superficie, moneda+, gobierno)>
<!ATTLIST pais nombre ID #REQUIRED>
<!ATTLIST pais fronteras IDREFS #REQUIRED>
<!ELEMENT superficie (#PCDATA)>
<!ATTLIST superficie unidad NMTOKEN #REQUIRED>
<!ELEMENT moneda (#PCDATA)>
<!ELEMENT gobierno EMPTY>
<!ATTLIST gobierno sistema NMTOKEN #IMPLIED>
]>



