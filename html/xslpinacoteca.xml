<?xml version="1.0" encoding="ISO-8859-1"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
   <xsl:template match="/">
     <html>
      <body> 
          <h2>Obras</h2>
             <table>
                <tr> 
                   <th>Título</th>
                   <th>Año</th>
                   <th>Autor</th>
                   <th>País</th>
                   <th>Museo</th>
                   <th>Visible</th>
                </tr>
                   <xsl:for-each select="pinacoteca/obra">
                     <xsl:sort select="@anyo" data-type="number" />
                      <tr>
                          <td><xsl:value-of select="titulo" /></td>
                          <td><xsl:value-of select="@anyo" /></td>
                          <td><xsl:value-of select="autor" /></td>
                          <td><xsl:value-of select="@pais" /></td>
                          <td><xsl:value-of select="museo" /></td>
                          <td><xsl:value-of select="museo/@visible" /></td>
                      </tr>
                   </xsl:for-each>
             </table>

      </body>
     </html>
   </xsl:template>
</xsl:stylesheet>



